# Environment Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Model Configuration
TRANSLATION_MODEL=Helsinki-NLP/opus-mt-gu-en
SUMMARIZATION_MODEL=facebook/bart-large-cnn

# Database Configuration
DATABASE_URL=sqlite:///./app_data.db

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://127.0.0.1:3003"]

# Processing Configuration
MAX_TEXT_LENGTH=5000
MAX_SUMMARY_LENGTH=150
MIN_SUMMARY_LENGTH=50
REQUEST_TIMEOUT=30

# News Extraction Configuration
NEWS_TIMEOUT=30
MAX_URLS_PER_REQUEST=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# API Configuration
API_TITLE=Gujarati News Translator API
API_VERSION=1.0.0
API_DESCRIPTION=API for translating and summarizing Gujarati news articles

# Cache Configuration (if needed)
CACHE_TTL=3600
ENABLE_CACHING=False